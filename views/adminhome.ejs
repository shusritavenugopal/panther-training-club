    <script>
        // Initialize Bootstrap dropdown
        document.addEventListener("DOMContentLoaded", function() {
            var dropdownMenu = document.querySelectorAll('.dropdown-toggle');
            dropdownMenu.forEach(function(dropdown) {
                dropdown.addEventListener('click', function() {
                    var dropdownParent = this.parentElement;
                    var isActive = dropdownParent.classList.contains('show');
                    if (!isActive) {
                        // Hide other dropdowns
                        var dropdowns = document.querySelectorAll('.dropdown');
                        dropdowns.forEach(function(item) {
                            if (item !== dropdownParent) {
                                item.classList.remove('show');
                            }
                        });
                    }
                });
            });
        });
      
        function logout() {
            localStorage.removeItem('admintoken');
            localStorage.removeItem('adminId');
