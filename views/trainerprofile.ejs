<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Trainer Profile</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
    }
    nav {
      background-color: #345da2;
      padding: 10px;
    }
    .nav-button {
      background-color: transparent;
      border: none;
      color: white;
      cursor: pointer;
      font-size: 16px;
    }
    .container {
      background-color: white;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    h2 {
      color: #345da2;
      margin-bottom: 20px;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin-bottom: 15px;
    }
    strong {
      font-weight: bold;
    }
    input[type="text"],
    input[type="email"],
    select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
    }
    button[type="submit"] {
      background-color: #345da2;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      cursor: pointer;
    }
    button[type="submit"]:hover {
      background-color: #2c4d8e;
    }
  </style>
</head>
<body>
  <nav class="d-flex justify-content-between align-items-center">
  <a class="navbar-brand" href="/trainerhome">
    <img src="https://cdn.glitch.global/053c29cd-dfdc-43c1-80f1-bb5086f7c78a/Panther.png?v=1714432585127" alt="Panther Training Club Logo" height="50">
  </a>
  <div>
    <button class="nav-button mr-2" onclick="redirectToPage('/trainerhome')"> Home</button>       
    <button class="nav-button" onclick="logout()">Logout</button>
  </div>
</nav>

  
  
  <div class="container mt-5">
    <h2>Trainer Profile</h2>
    <form id="trainerProfileForm">
      <ul>
        <li><strong>Name:</strong> <input type="text" id="trainerName" name="Name"></li>
        <li><strong>Email:</strong> <input type="email" id="trainerEmail" name="Email" readonly></li>
        <li><strong>PhoneNo:</strong> <input type="text" id="trainerPhone" name="PhoneNo"></li>
        <li><strong>Age:</strong> <input type="text" id="trainerAge" name="Age"></li>
        <li><strong>Gender:</strong> 
          <select id="trainerGender" name="Gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </li>
        <li><strong>Specializations:</strong> <input type="text" id="trainerSpecializations" name="Specializations"></li>
      </ul>
      <button type="submit">Update</button>
    </form>
  </div>
  <script>
    function logout() {
      localStorage.removeItem('trainertoken');
      window.location.href = '/index';
    }
    
    function redirectToPage(path) {
      window.location.href = path;
    }
  </script>
  <script src="trainerprofile.js"></script>
</body>
</html>
